<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../css/default.css">
    <link rel="stylesheet" href="../../css/footer.css">
    <link rel="stylesheet" href="../../user/css/header.css">
    <link rel="stylesheet" href="../../user/css/courses-task.css">
    <title>Stige | Courses</title>
</head>

<body>
    <%- include('header.ejs') %>
    
    <div class="task-head" id="<%= courseTask._id%>">
        <h3 id="<%= courseTask.courseTaskName%>"><%= courseTask.courseName %>  &rarr;  <%= courseTask.courseTaskName %></h3>
        <% if(courseTask.completed){ %>
            <span id="completed">Completed</span>
        <% } %>
    </div>

    <%- include('../'+ courseTask.path +'.ejs') %>

    <% if(!courseTask.completed){ %>
        <div id="markAsComplete">
            <button id="markAsCompleteBtn">Mark as Complete</button>
        </div>
    <% } else {%>
        <div id="backToCourse">
            <a href="/courses">Back to Courses</a>
        </div>
    <% } %>
    
    <%- include('../footer.ejs') %>
    <script src="../../user/js/courses-task.js"></script>
</body>

</html>